        framenum = 1
        cat = np.loadtxt(catfile)
        idx = np.where(cat[:,22] == framenum)[0]
        cat = cat[idx,:]
        magthresh = np.min(cat[:,4])+8.0
        idx = np.where(cat[:,4] <= magthresh)[0]
        cat = cat[idx,:]
        idx = np.argsort(cat[:,4])
        cat = cat[idx,:]
        #print(cat[:,4])

        #from astroquery.astrometry_net import AstrometryNet
